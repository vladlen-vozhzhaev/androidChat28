<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <View
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="-70dp"
        android:layout_marginTop="-70dp"
        android:background="@drawable/left_circle" />
    <View
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:background="@drawable/small_circle2"
        android:layout_marginStart="272dp"/>
    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"/>
    <View
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/small_circle3"/>
    <View
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="right"
        android:background="@drawable/right_circle"
        android:layout_marginEnd="-40dp"
        android:layout_marginTop="-120dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:gravity="center|bottom"
        android:orientation="vertical">
        <TextView
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:textColor="#55BD1F"
            android:layout_marginBottom="5dp"
            android:text="Логин" />
        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="326dp"
            android:layout_height="40dp"
            android:hint="Логин"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edittext_bg"/>
        <TextView
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:textColor="#55BD1F"
            android:layout_marginBottom="5dp"
            android:text="Пароль" />
        <EditText
            android:id="@+id/passEditText"
            android:layout_width="326dp"
            android:layout_height="40dp"
            android:hint="Пароль"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_bg"
            android:inputType="textPassword"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appCompatBtnAuth"
            android:layout_width="326dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_lime"
            android:text="Авторизоваться"
            android:textColor="#FFF"/>
    </LinearLayout>

</LinearLayout>